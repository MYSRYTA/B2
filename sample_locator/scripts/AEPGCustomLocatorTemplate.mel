global proc AEPGCustomLocatorTemplate(string $nodeName) {
	
	editorTemplate -beginLayout "Main" -collapse 0 ;
		editorTemplate -callCustom "icon_Menu" "icon_MenuUpdate" "icon";
		editorTemplate -label "offset : scale" -addControl "size";
		editorTemplate -label "offset : rotation" -addControl "offsetRot";
		editorTemplate -label "offset : transrate" -addControl "offsetTr";
		editorTemplate -label "draw : wire " -addControl "wire";
		editorTemplate -label "draw : face " -addControl "face";
		editorTemplate -label "color : default" -addControl "color0";
		editorTemplate -label "color : select" -addControl "color1";
	editorTemplate -endLayout ;
	
	editorTemplate -beginLayout "orig" -collapse 0 ;
		AElocatorInclude $nodeName;
		AElocatorCommon $nodeName;
	editorTemplate -endLayout ;
}
